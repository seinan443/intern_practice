<body>
    <header>
      <h1>Share Netflix</h1>
      <div class="header-list">
      <ul>
        <li><%= link_to "ホーム", movie_index_path %></li>
        <li><%= link_to '投稿する', :controller => "movie", :action => "new" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <li><a href="/users/<%= current_user.id %>">マイページ</a></li>
      </ul>
      </div>
    </header>
  </body>

<section id="first-block">
<div class="title">
<h1>作品編集ページ</h1>
<h3>~投稿した作品を編集しよう~</h3>
</div>
</section>

<section id="second-block">
<%= form_for @movie do |f| %>
  <div class="fieldtitile">
    <%= f.label :タイトル名 %>
    <br>
    <%= f.text_field :name, :size => 140 %>
  </div>

  <div class="fieldchara">
  <%= f.label :主演名 %>
  <br>
  <%= f.text_field :character, :size =>140 %>
  </div>

  <div class="fieldge">
  <%= f.label :作品のジャンルを選ぶ %>
  <br>
  <%= f.select :genre,[["邦画", "邦画"], ["洋画", "洋画"], ["国内ドラマ", "国内ドラマ"], ["海外ドラマ", "海外ドラマ"], ["アニメ", "アニメ"], ["バラエティ", "バラエティ"], ["ドキュメント", "ドキュメント"], ["その他", "その他"]], include_blank: "選択して下さい" %>
  </div>

  <div class="fieldtime">
  <%= f.label :作品時間は何分？%>
  <br>
  <%= f.number_field :time, :size =>100 %>
  </div>

  <div class="fieldimage">
  <%= f.label :画像を選択 %>
  <br>
  <%= f.file_field :image %>
  </div>

  <div class="fieldview">
  <%= f.label :レビューやあらすじ %>
  <br>
  <%= f.text_area :review, size: "100x10" %>
  </div>


  <%= f.submit "投稿する" %>
<% end %>
</section>

<%= stylesheet_link_tag 'movie_edit', :media => "all" %>